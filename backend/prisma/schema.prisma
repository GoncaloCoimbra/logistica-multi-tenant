generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
 
model Company {
  id         String      @id @default(uuid())
  name       String
  nif        String      @unique
  address    String?
  email      String      @unique
  phone      String?
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  auditLogs  AuditLog[]
  products   Product[]
  suppliers  Supplier[]
  transports Transport[]
  users      User[]
  vehicles   Vehicle[]
}

model User {
  id          String            @id @default(uuid())
  name        String
  email       String            @unique
  password    String
  role        Role              @default(OPERATOR)
  isActive    Boolean           @default(true)  
  avatarUrl   String?          
  companyId   String?
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  auditLogs   AuditLog[]
  productLogs ProductMovement[]
  company     Company?          @relation(fields: [companyId], references: [id], onDelete: Cascade)
}

model Supplier {
  id        String    @id @default(uuid())
  name      String
  nif       String
  address   String?
  email     String?
  phone     String?
  city      String?
  state     String?
  companyId String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  products  Product[]
  company   Company   @relation(fields: [companyId], references: [id], onDelete: Cascade)
}

model Product {
  id              String             @id @default(uuid())
  internalCode    String
  description     String
  quantity        Float
  unit            String
  totalWeight     Float?
  totalVolume     Float?
  currentLocation String?
  supplierId      String?
  status          ProductStatus      @default(RECEIVED)
  receivedAt      DateTime           @default(now())
  lastMovedAt     DateTime           @default(now())
  shippedAt       DateTime?
  observations    String?
  companyId       String
  createdAt       DateTime           @default(now())
  updatedAt       DateTime           @updatedAt
  company         Company            @relation(fields: [companyId], references: [id], onDelete: Cascade)
  supplier        Supplier?          @relation(fields: [supplierId], references: [id])
  movements       ProductMovement[]
  transports      TransportProduct[]

  @@unique([internalCode, companyId])
}

model ProductMovement {
  id             String         @id @default(uuid())
  productId      String
  previousStatus ProductStatus?
  newStatus      ProductStatus
  quantity       Float
  location       String?
  reason         String?
  userId         String
  createdAt      DateTime       @default(now())
  product        Product        @relation(fields: [productId], references: [id], onDelete: Cascade)
  user           User           @relation(fields: [userId], references: [id])
}

model Vehicle {
  id           String      @id @default(uuid())
  licensePlate String
  model        String?
  brand        String?
  type         String
  capacity     Float
  year         Int?
  status       String      @default("available")
  observations String?
  companyId    String
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  transports   Transport[]
  company      Company     @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@unique([licensePlate, companyId])
}

model Transport {
  id                String             @id @default(uuid())
  origin            String
  destination       String
  expectedDate      DateTime
  departureDate     DateTime?
  estimatedArrival  DateTime?
  driver            String?
  status            TransportStatus    @default(PENDING)
  totalWeight       Float?
  notes             String?
  vehicleId         String?
  companyId         String
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  company           Company            @relation(fields: [companyId], references: [id], onDelete: Cascade)
  vehicle           Vehicle?           @relation(fields: [vehicleId], references: [id])
  products          TransportProduct[]
}

model TransportProduct {
  id          String    @id @default(uuid())
  transportId String
  productId   String
  product     Product   @relation(fields: [productId], references: [id], onDelete: Cascade)
  transport   Transport @relation(fields: [transportId], references: [id], onDelete: Cascade)

  @@unique([transportId, productId])
}

model AuditLog {
  id        String   @id @default(uuid())
  action    String
  entity    String
  entityId  String
  userId    String
  ipAddress String?
  companyId String
  createdAt DateTime @default(now())
  company   Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id])
}

enum Role {
  SUPER_ADMIN  
  ADMIN
  OPERATOR
}

enum ProductStatus {
  RECEIVED
  IN_ANALYSIS
  REJECTED
  APPROVED
  IN_STORAGE
  IN_PREPARATION
  IN_SHIPPING
  DELIVERED
  IN_RETURN
  ELIMINATED
  CANCELLED
}

enum TransportStatus {
  PENDING
  IN_TRANSIT
  DELIVERED
  CANCELLED
}